# Flask / API
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=dev-secret-key
LOG_LEVEL=INFO

# Supabase
SUPABASE_URL=https://example.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# WhatsApp / WAHA
WAHA_BASE_URL=http://localhost:3000
WAHA_URL=https://waha.onrender.com
WAHA_SESSION_NAME=default
WAHA_API_KEY=your-waha-api-key
MAX_TENTATIVAS_ENVIO=3
TIMEOUT_SESSAO_MINUTOS=60

# Google Sheets - Leads (entrada obrigatória)
GOOGLE_SHEETS_ID=your-leads-spreadsheet-id
GOOGLE_SHEETS_RANGE=Leads!A1:H
# Credenciais (use um dos dois formatos)
# GOOGLE_CREDENTIALS_PATH=./google_credentials.json
GOOGLE_SHEETS_CREDENTIALS_JSON={"type": "service_account", "project_id": "your-project", "private_key_id": "key-id", "private_key": "-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n", "client_email": "service@project.iam.gserviceaccount.com", "client_id": "123456789", "auth_uri": "https://accounts.google.com/o/oauth2/auth", "token_uri": "https://oauth2.googleapis.com/token", "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs", "client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/service%40project.iam.gserviceaccount.com", "universe_domain": "googleapis.com"}

# Google Sheets - CRM/Saída (opcional)
GOOGLE_CRM_SHEETS_ID=your-crm-spreadsheet-id
GOOGLE_CRM_SHEETS_RANGE=CRM!A1:H

# Watcher de leads (30-60 segundos recomendado)
LEADS_WATCHER_INTERVAL=60

# Agenda do diagnóstico financeiro
AGENDA_DIAGNOSTICO_SLOTS=Terça 10h;Quinta 16h;Sexta 14h
AGENDA_DIAGNOSTICO_URL=https://calendly.com/ldc-diagnostico

# Sistema de Qualificação
SCORE_MINIMO_QUALIFICACAO=70

# Python Path (para produção)
PYTHONPATH=/opt/render/project/src

# WhatsApp webhook (preencher se necessário)
WAHA_WEBHOOK_URL=

# Configurações do Sistema
# Para usar com os scripts de processamento de leads:
# 1. Crie uma planilha Google Sheets com aba "leads"
# 2. Configure as colunas: status, nome, telefone, canal, contexto, lead_id, mensagem_inicial, observacao
# 3. Compartilhe a planilha com o email da conta de serviço
# 4. Execute: python scripts/process_leads_from_sheet.py
